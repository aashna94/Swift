func calcScores(scores : [Int]) -> (min : Int, max : Int, sum : Int){
    var min = scores[0]
    var max = scores[0]
    var sum = 0
    
    for i in scores {
        if i > max {
            max = i
    }
        if i < min {
            min = i
        }
        sum += i
    }
    return (min,max,sum)
}

