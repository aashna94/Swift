import UIKit

class Shape {
    var sides = 0
    var name : String
    init(name : String) {
        self.name = name
    }
    func description() {
        print("A \(name) has \(sides) sides.")
    }
}

var s = Shape(name : "Square")
s.sides = 4
s.description()
