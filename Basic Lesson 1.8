import UIKit

class Shape {
    var sides : Int = 0
    var name : String
    init(name : String) {
        self.name = name
    }
    func description() {
        print("The shape has \(sides) sides.")
    }
}

class Square : Shape {
    var length :Double
    
    init(length : Double, name : String) {
        self.length = length
        super.init(name: name)
        sides = 4
    }
    override func description() {
        print("A \(name) has \(sides) sides.")
    }
    func area()->Double {
        return length*length
    }
}


class Circle : Shape {
    var radius : Double
    init(radius : Double, name : String) {
        self.radius = radius
        super.init(name: name)
        sides = 0
    }
    
    override func description() {
        print("The shape is circle with \(radius) radius.")
    }
    
    func area() -> Double {
        return (2*22*radius)/7
    }
    
}
var s = Square(length : 4.0, name : "Square")
var res = s.area()
s.description()
print("Area is \(res).")

var r = Circle(radius : 14, name: "Circle")
res = r.area()
r.description()
print("Area is \(res ).")




